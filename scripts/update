#!/bin/bash

targetBranch="develop"
wrkDir="/home/discord/droidscord"

cd "$wrkDir" || exit 1

if ! git checkout "$targetBranch"; then
  echo "ðŸ‘¹ Oops! Failed to switch branch"

  exit 1
fi

if ! git pull origin main; then
  echo "ðŸ‘¹ Oops! Failed to pull latest"

  exit 1
fi

if ! docker compose restart; then
  echo "ðŸ‘¹ Oops! Failed to restart docker compose"
fi
